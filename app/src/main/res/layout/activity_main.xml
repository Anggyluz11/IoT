<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/color"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#534940"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/contra"
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:layout_marginTop="220dp"
        android:ems="10"
        android:hint="Contraseña"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="#986a46"
        android:textColorHint="#986A46"
        android:textSize="33sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/accessButton"
        android:layout_width="174dp"
        android:layout_height="173dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/llave"
        app:layout_constraintEnd_toEndOf="@+id/contra"
        app:layout_constraintStart_toStartOf="@+id/contra"
        app:layout_constraintTop_toBottomOf="@+id/contra" />

    <Button
        android:id="@+id/recu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:backgroundTint="#534940"
        android:text="Olvide mi contraseña"
        android:textColor="#986A46"
        app:layout_constraintEnd_toEndOf="@+id/accessButton"
        app:layout_constraintStart_toStartOf="@+id/accessButton"
        app:layout_constraintTop_toBottomOf="@+id/accessButton" />


</androidx.constraintlayout.widget.ConstraintLayout>