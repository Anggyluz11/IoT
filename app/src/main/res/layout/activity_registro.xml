<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#534940"
    tools:context=".registro">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="185dp"
        android:layout_height="53dp"
        android:layout_marginTop="70dp"
        android:text="Contraseña"
        android:textColor="#986a46"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/textView10"
        app:layout_constraintStart_toStartOf="@+id/textView10"
        app:layout_constraintTop_toBottomOf="@+id/respuesta" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="251dp"
        android:layout_height="55dp"
        android:layout_marginTop="30dp"
        android:text="Registro"
        android:textAlignment="center"
        android:textColor="#986a46"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/preguntas"
        android:layout_width="291dp"
        android:layout_height="61dp"
        android:layout_marginTop="35dp"
        android:entries="@array/Preguntas"
        android:prompt="@string/spn_cuestion"
        android:scrollbarSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />/>

    <EditText
        android:id="@+id/respuesta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:hint="Respuesta"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColorHint="#D4AD86"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/preguntas"
        app:layout_constraintStart_toStartOf="@+id/preguntas"
        app:layout_constraintTop_toBottomOf="@+id/preguntas" />

    <EditText
        android:id="@+id/cont"
        android:layout_width="239dp"
        android:layout_height="54dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:hint="Establezca contraseña"
        android:inputType="textPersonName"
        android:textColor="#D4AD86"
        android:textColorHint="#D4AD86"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/textView7"
        app:layout_constraintStart_toStartOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <EditText
        android:id="@+id/cont2"
        android:layout_width="241dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Confirme contraseña"
        android:inputType="textPersonName"
        android:textColor="#D4AD86"
        android:textColorHint="#D4AD86"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/cont"
        app:layout_constraintTop_toBottomOf="@+id/cont" />

    <ImageButton
        android:id="@+id/registrar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/usuario"
        app:layout_constraintEnd_toEndOf="@+id/cont2"
        app:layout_constraintStart_toStartOf="@+id/cont2"
        app:layout_constraintTop_toBottomOf="@+id/cont2" />

    <ImageButton
        android:id="@+id/atras"
        android:layout_width="54dp"
        android:layout_height="51dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/cerrar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>